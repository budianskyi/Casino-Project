<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Casino_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/Casino_Project.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

            body > .container {
                flex: 1;
            }

        body {
            background: linear-gradient(45deg, #141e30, #243b55);
            color: #f1c40f;
            font-family: 'Arial', sans-serif;
        }

        .navbar {
            background-color: #000;
        }

        .navbar-brand {
            font-family: 'Monaco', monospace;
            font-size: 1.5rem;
            color: #f39c12 !important;
        }

        .nav-link {
            color: #f1c40f !important;
        }

            .nav-link:hover {
                color: #e67e22 !important;
            }

        .btn-primary {
            background-color: #e74c3c;
            border: none;
        }

            .btn-primary:hover {
                background-color: #c0392b;
            }

        .btn-outline-light {
            border-color: #f1c40f;
            color: #f1c40f;
        }

            .btn-outline-light:hover {
                background-color: #f1c40f;
                color: #000;
            }

        .container h1 {
            font-size: 3rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .container p {
            font-size: 1.2rem;
        }

        .icon {
            margin-right: 8px;
        }

        .game-card {
            background-color: #2c3e50;
            border-radius: 15px;
            color: #f1c40f;
            padding: 20px;
            transition: transform 0.3s;
        }

            .game-card:hover {
                transform: scale(1.05);
            }

            .game-card i {
                font-size: 3rem;
                margin-bottom: 15px;
            }

            .game-card h4 {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 10px;
            }

            .game-card p {
                font-size: 1.2rem;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #000;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index"><i class="fas fa-dice"></i> Casino Royale</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Users/Index">Список гравців</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Games/Dice Game/Index"><i class="fas fa-dice"></i> Гра в кості</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Games/Miner Game/Index"><i class="fas fa-coins"></i> Мінер</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Games/MatchThree/Index"><i class="fas fa-coins"></i> 3 в ряд</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Support"><i class="fas fa-headset"></i> Підтримка</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <button class="btn btn-outline-light me-2" type="button"><i class="fas fa-sign-in-alt"></i> Увійти</button>
                        <button class="btn btn-primary" type="button"><i class="fas fa-user-plus"></i> Реєстрація</button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer" style="color: #f1c40f;">
        <div class="container">
            &copy; 2025 - Casino_Project - <a asp-area="" asp-page="/Privacy" style="color: #f1c40f;">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
