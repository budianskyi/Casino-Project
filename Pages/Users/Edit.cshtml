@page
@model Casino_Project.Pages.Users.EditModel

<form method="post">
	<input hidden asp-for="User.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Edit User</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="User.UserName"></label>
			<input asp-for="@Model.User.UserName" class="form-control" />
			<span asp-validation-for="User.UserName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="User.Balance"></label>
			<input asp-for="@Model.User.Balance" class="form-control" />
			<span asp-validation-for="User.Balance" class="text-danger"></span>
		</div>
		<button type="submit" class="btn-primary" style="width:150px">Update</button>
		<a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}